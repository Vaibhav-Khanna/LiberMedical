<?xml version="1.0" encoding="UTF-8" ?>
<custom:BasePage
  x:Class="libermedical.Pages.PlusPage"
  xmlns="http://xamarin.com/schemas/2014/forms"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  xmlns:custom="clr-namespace:libermedical.CustomControls;assembly=libermedical"
  Title="Plus"
  Style="{StaticResource AppBackgroundColor}">
	<custom:BasePage.ContentPresenter>
		<ContentView Padding="15,0,0,0">
		<!--	<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="70*" />
					<RowDefinition Height="30*" />
				</Grid.RowDefinitions>-->
                <ScrollView Orientation="Vertical" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" >
              
				<StackLayout
				  
				  HorizontalOptions="FillAndExpand"
				  Orientation="Vertical"
				  Style="{StaticResource ModalContentBackgroundColor}">

					<Grid
					  Padding="0,0,10,0"
					  HeightRequest="50"
					  HorizontalOptions="FillAndExpand">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="10*" />
							<ColumnDefinition Width="80*" />
							<ColumnDefinition Width="10*" />
						</Grid.ColumnDefinitions>
						<Image
						  Grid.Column="0"
						  Source="user.png"
						  VerticalOptions="Center" />
						<Label
						  Grid.Column="1"
						  Style="{StaticResource PlusList}"
						  Text="Mon compte"
						  VerticalOptions="Center" />
						<Image
						  Grid.Column="2"
						  Source="back_arrow_green.png"
						  VerticalOptions="Center" />

						<Grid.GestureRecognizers>
							<TapGestureRecognizer Command="{Binding GoToProfileCommand}" />
						</Grid.GestureRecognizers>
					</Grid>
                    <BoxView Style="{StaticResource GreyBoxViewLine}" ></BoxView>
                     <Grid Margin="0,0,10,0" HeightRequest="50"  VerticalOptions="Center" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="10*" />
                                    <ColumnDefinition Width="80*" />
                                    <ColumnDefinition Width="10*" />
                                </Grid.ColumnDefinitions>
                    <Grid.GestureRecognizers>
                        <TapGestureRecognizer NumberOfTapsRequired="1" Command="{Binding ViewContract}" />
                    </Grid.GestureRecognizers>
                    
                                <Image
                                    Grid.Column="0"
                                    HorizontalOptions="Center"
                                    Source="contrat.png" 
                        HeightRequest="25"
                        IsEnabled="{Binding IsContractVisible}"
                                    VerticalOptions="Center" />
                                <Label
                                    Grid.Column="1"
                                    HorizontalOptions="StartAndExpand"
                                    Style="{StaticResource PlusList}"
                                    Text="Mon contrat"
                        IsEnabled="{Binding IsContractVisible}"
                                    VerticalOptions="Center">
                                </Label>
                                <Image
                                    Grid.Column="2"
                                    HorizontalOptions="CenterAndExpand"
                                    Source="back_arrow_green.png"
                        IsEnabled="{Binding IsContractVisible}"
                                    VerticalOptions="Center" />
                            </Grid>

                  <BoxView Style="{StaticResource GreyBoxViewLine}" ></BoxView>

                    <Grid Margin="0,0,10,0" VerticalOptions="Center" HeightRequest="50" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="10*" />
                                    <ColumnDefinition Width="88*" />
                                    <ColumnDefinition Width="10*" />
                                </Grid.ColumnDefinitions>
                    <Grid.GestureRecognizers>
                        <TapGestureRecognizer NumberOfTapsRequired="1" Command="{Binding ViewBills}" />
                    </Grid.GestureRecognizers>
                    
                                <Image
                                    Grid.Column="0"
                                    HorizontalOptions="Center"
                                    Source="contrat.png"
                        HeightRequest="25"
                                    VerticalOptions="Center" />
                                <Label
                                    Grid.Column="1"
                                    HorizontalOptions="StartAndExpand"
                                    Style="{StaticResource PlusList}"
                                    Text="Mes factures"                     
                                    VerticalOptions="Center">
                                </Label>
                                <Image
                                    Grid.Column="2"
                                    HorizontalOptions="CenterAndExpand"
                                    Source="back_arrow_green.png"                       
                                    VerticalOptions="Center" />
                            </Grid>
					<BoxView Style="{StaticResource GreyBoxViewLine}"/>
					<StackLayout
					  Padding="0,0,21,0"
					  HeightRequest="50"
					  Orientation="Horizontal">
						<Label
						  HorizontalOptions="StartAndExpand"
						  Style="{StaticResource PlusList}"
						  Text="CGV"
						  VerticalOptions="Center" />
						<Image
						  HorizontalOptions="EndAndExpand"
						  Source="back_arrow_green.png"
						  VerticalOptions="Center" />
                        <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding CGVCommand}" />
                        </StackLayout.GestureRecognizers>
					</StackLayout>
					<BoxView Style="{StaticResource GreyBoxViewLine}"/>
					<StackLayout
					  Padding="0,0,21,0"
					  HeightRequest="50"
					  Orientation="Horizontal">
						<Label
						  HorizontalOptions="StartAndExpand"
						  Style="{StaticResource PlusList}"
						  Text="CGU"
						  VerticalOptions="Center" />
						<Image
						  HorizontalOptions="EndAndExpand"
						  Source="back_arrow_green.png"
						  VerticalOptions="Center" />
                         <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding CGUCommand}" />
                        </StackLayout.GestureRecognizers>
					</StackLayout>
					<BoxView Style="{StaticResource GreyBoxViewLine}"/>
					<StackLayout
					  Padding="0,0,21,0"
					  HeightRequest="50"
					  Orientation="Horizontal">
						<Label
						  HorizontalOptions="StartAndExpand"
						  Style="{StaticResource PlusList}"
						  Text="FAQ"
						  VerticalOptions="Center" />
						<Image
						  HorizontalOptions="EndAndExpand"
						  Source="back_arrow_green.png"
						  VerticalOptions="Center" />
                         <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding FAQCommand}" />
                        </StackLayout.GestureRecognizers>
					</StackLayout>
					<BoxView Style="{StaticResource GreyBoxViewLine}"/>
                    <Button
                  IsEnabled="{Binding ShouldShowContact}"
                 
                  x:Name = "bt"
                  BackgroundColor="White"
                  BorderColor="#91c602"
                  BorderWidth="1"
                  BorderRadius="5"
                  Margin="30,70,45,100"
                  Command="{Binding ConnectCommand}"
                  FontFamily="SFUIText-Medium.otf"
                  FontSize="18"
                  HeightRequest="69"
                  HorizontalOptions="FillAndExpand"
                  Text="Contacter mon conseiller"
                  TextColor="#91c602"
                  VerticalOptions="StartAndExpand"
                  />
				</StackLayout>
               </ScrollView>
				
			<!--</Grid>-->
		</ContentView>
	</custom:BasePage.ContentPresenter>
</custom:BasePage>