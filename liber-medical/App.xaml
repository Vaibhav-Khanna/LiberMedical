<?xml version="1.0" encoding="utf-8"?>
<Application xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="libermedical.App">
	<Application.Resources>
        <ResourceDictionary>
            <!-- Application resource dictionary -->
            <Color x:Key="AppBackgroundColor">White</Color>
            <Color x:Key="EntryLoginPage">#9b9b9b</Color>
            <Color x:Key="ButtonBackgroundLoginPage">#d1d1d1</Color>
            <Color x:Key="ButtonTextBackgroundLoginPage">#ffffff</Color>
            
            <!-- Global Style -->
            <Style x:Key="LoginPageEntry" TargetType="Entry">
                    <Setter Property="TextColor" Value="{StaticResource EntryLoginPage}" />
                    <Setter Property="PlaceholderColor" Value="{StaticResource EntryLoginPage}" />
                    <Setter Property="FontFamily" Value="SFUIDisplay-Light" />
                    <Setter Property="FontSize" Value="15" />
                
            </Style>
            <Style x:Key="LoginPageButton" TargetType="Button">
                    <Setter Property="BackgroundColor" Value="{StaticResource ButtonBackgroundLoginPage}" />
                    <Setter Property="TextColor" Value="{StaticResource ButtonTextBackgroundLoginPage}" />
                    <Setter Property="FontFamily" Value="SFUIText-Light.otf" />
                    <Setter Property="FontSize" Value="18" />
            </Style>
            <Style x:Key="LoginPageForgot" TargetType="Label">
                    <Setter Property="TextColor" Value="{StaticResource EntryLoginPage}" />
                    <Setter Property="FontFamily" Value="SFUIDisplay-Light" />
                    <Setter Property="FontSize" Value="14" />
            </Style>
        </ResourceDictionary>
	</Application.Resources>
</Application>
