<?xml version="1.0" encoding="UTF-8"?>
<custom:BasePage xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:custom="clr-namespace:libermedical.CustomControls;assembly=libermedical" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="libermedical.Views.PatientsListPage" 
    Style="{StaticResource AppBackgroundColor}"
    Title="Patients">

    <custom:BasePage.ToolbarItems Name="Patients" Command="AddPatient">
        <ToolbarItem Name="Patients" Icon="plus.png" Order="Primary" Clicked="AddUser_Clicked" />
    </custom:BasePage.ToolbarItems>
    
    <custom:BasePage.ContentPresenter>
        <ContentView>
            <ListView x:Name="PatientView" ItemsSource="{Binding patients}" SeparatorVisibility="Default" >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding FirstLastName}" TextColor="Black" Tapped="PatientTapped" />    
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ContentView>
    </custom:BasePage.ContentPresenter>
</custom:BasePage>